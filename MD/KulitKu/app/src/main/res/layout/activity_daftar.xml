<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/daftar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarActivity"
    android:background="@color/secondaryColor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:id="@+id/D_text1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/D_text1"
        android:layout_marginTop="-30dp"
        android:fontFamily="@font/poppinsregular"
        android:gravity="left"
        android:padding="25dp"
        android:text="Daftar sekarang dan mulai perjalanan Anda menuju kulit yang lebih sehat!"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:id="@+id/D_text2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/D_text2"
        android:padding="20dp"
        android:id="@+id/ly2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:textSize="18sp"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/form"
            android:hint="Masukkan Nama Lengkap"
            android:paddingLeft="20dp"
            android:id="@+id/D_nama"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/form"
            android:hint="Masukkan Email"
            android:paddingLeft="20dp"
            android:id="@+id/D_email"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="18sp"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/form"
            android:hint="Masukkan Password"
            android:paddingLeft="20dp"
            android:id="@+id/D_password"
            android:fontFamily="@font/poppinsregular"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly2"
        android:text="Daftar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/button_shape"
        android:width="170dp"
        android:height="55dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:id="@+id/D_btn"
        android:fontFamily="@font/poppinsbold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KulitKu v1.0"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsregular"/>

</RelativeLayout>